<Project>

  <!-- ðŸŽ¯ CONFIGURAÃ‡Ã•ES GLOBAIS ELEGANTES -->
  <PropertyGroup Label="Global Settings">
    <!-- ConfiguraÃ§Ãµes bÃ¡sicas -->
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- ðŸš€ ANÃLISE DE CÃ“DIGO MODERNA -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    
    <!-- ðŸŽ¨ NULLABLE REFERENCE TYPES - ABORDAGEM ELEGANTE -->
    <!-- EditorConfig jÃ¡ define csharp_nullable = enable -->
    <!-- Aqui apenas configuramos o comportamento -->
    <WarningsAsErrors />
    <WarningsNotAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    
    <!-- ðŸ”‡ SUPRIMIR WARNINGS ESPECÃFICOS GLOBALMENTE -->
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Missing XML comment for publicly visible type or member -->
    <NoWarn>$(NoWarn);CS8632</NoWarn> <!-- The annotation for nullable reference types should only be used in code within a '#nullable' annotations context -->
  </PropertyGroup>

  <!-- ðŸ“¦ PACKAGES GLOBAIS PARA ANÃLISE DE CÃ“DIGO -->
  <ItemGroup Label="Global Analyzers">
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- ðŸŽ¯ CONFIGURAÃ‡Ã•ES POR TIPO DE PROJETO -->
  <PropertyGroup Condition="'$(MSBuildProjectName)' == 'Core' OR 
                           '$(MSBuildProjectName)' == 'MessageBus' OR
                           $(MSBuildProjectName.EndsWith('.Domain')) OR
                           $(MSBuildProjectName.EndsWith('.Application')) OR
                           $(MSBuildProjectName.EndsWith('.Infrastructure'))">
    <!-- âœ¨ PROJETOS DE DOMÃNIO E INFRAESTRUTURA -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.API'))">
    <!-- ðŸŒ PROJETOS DE API -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
  </PropertyGroup>

  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.Tests')) OR 
                           $(MSBuildProjectName.EndsWith('.UnitTests')) OR
                           $(MSBuildProjectName.EndsWith('.IntegrationTests'))">
    <!-- ðŸ§ª PROJETOS DE TESTE -->
    <IsTestProject>true</IsTestProject>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

</Project>
